---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

// Los datos del usuario se cargarán dinámicamente en el cliente

// Mock recent orders
const recentOrders = [
  {
    id: '#EVA-9834',
    date: '12 Oct, 2023',
    status: 'Enviado',
    statusColor: 'green',
    total: 45.00
  },
  {
    id: '#EVA-9721',
    date: '05 Oct, 2023',
    status: 'Completado',
    statusColor: 'gray',
    total: 89.99
  },
  {
    id: '#EVA-9512',
    date: '28 Sep, 2023',
    status: 'Cancelado',
    statusColor: 'red',
    total: 120.50
  }
];

// Mock address
const mainAddress = {
  name: 'Juan Pérez',
  street: 'Calle de los Juguetes 123, 2ºB',
  city: '28001 Madrid, España'
};

// Wishlist se cargará desde localStorage en el cliente

// Mock stats (se actualizarán dinámicamente)
const stats = {
  totalOrders: 0,
  inTransit: 0
};

// Mock user (se actualizará dinámicamente)
const user = {
  name: 'Cargando...',
  email: 'cargando@...',
  phone: '---'
};

const menuItems = [
  { icon: 'dashboard', label: 'Panel de Control', href: '/cuenta', active: true },
  { icon: 'shopping_bag', label: 'Mis Pedidos', href: '/cuenta/pedidos', active: false },
  { icon: 'account_circle', label: 'Detalles de Cuenta', href: '/cuenta/detalles', active: false },
  { icon: 'location_on', label: 'Direcciones', href: '/cuenta/direcciones', active: false },
  { icon: 'favorite', label: 'Lista de Deseos', href: '/favoritos', active: false }
];
---

<Layout title="Mi Cuenta - Deportes y Juguetes Eva" description="Panel de control de tu cuenta">
  <Header />

  <main class="bg-background-light min-h-screen">
    <!-- Breadcrumb -->
    <div class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center text-sm">
          <a href="/" class="text-gray-500 hover:text-secondary transition-colors">Inicio</a>
          <i class="material-icons text-gray-400 text-sm mx-2">chevron_right</i>
          <span class="text-secondary font-medium">Mi Cuenta</span>
        </nav>
      </div>
    </div>

    <div class="container mx-auto px-4 py-8 lg:py-12">
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Sidebar de Navegación -->
        <aside class="w-full lg:w-72 shrink-0">
          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 sticky top-24">
            <div class="mb-8">
              <h1 id="user-name" class="text-xl font-bold text-secondary">Mi Cuenta</h1>
              <span id="user-status" class="inline-block bg-primary text-black text-xs font-bold px-3 py-1 rounded-full mt-2">Cliente</span>
            </div>

            <nav class="flex flex-col gap-1">
              {menuItems.map((item) => (
                <a
                  class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-all ${
                    item.active
                      ? 'bg-primary text-black font-bold'
                      : 'hover:bg-gray-50 text-gray-700'
                  }`}
                  href={item.href}
                >
                  <i class="material-icons text-xl">{item.icon}</i>
                  <span>{item.label}</span>
                </a>
              ))}

              <!-- Botón logout -->
              <div class="mt-8 pt-6 border-t border-gray-200">
                <button class="w-full flex items-center justify-center gap-2 bg-secondary text-white py-3 rounded-lg font-bold hover:bg-black transition-all">
                  <i class="material-icons text-sm">logout</i>
                  Cerrar Sesión
                </button>
              </div>
            </nav>
          </div>
        </aside>

        <!-- Contenido Principal -->
        <div class="flex-1 space-y-8">
          <!-- Page Header -->
          <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <div>
              <h2 class="text-4xl font-black text-secondary mb-2">Panel de Control</h2>
              <p class="text-gray-600">Gestiona tu cuenta y pedidos</p>
            </div>
            <a href="/cuenta/detalles" class="bg-primary/20 border border-primary/30 text-secondary font-bold px-6 py-3 rounded-lg hover:bg-primary/30 transition-colors">
              Editar Perfil
            </a>
          </div>

          <!-- Stats Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-xl border border-gray-200 flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600 mb-1">Total</p>
                <p class="text-3xl font-bold text-secondary">{stats.totalOrders}</p>
              </div>
              <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                <i class="material-icons text-secondary text-3xl">shopping_bag</i>
              </div>
            </div>

            <div class="bg-white p-6 rounded-xl border border-gray-200 flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600 mb-1">En Camino</p>
                <p class="text-3xl font-bold text-green-600">{stats.inTransit}</p>
              </div>
              <div class="w-14 h-14 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
                <i class="material-icons text-green-600 text-3xl">local_shipping</i>
              </div>
            </div>
          </div>

          <!-- Pedidos Recientes -->
          <section class="bg-white rounded-xl border border-gray-200 overflow-hidden">
            <div class="p-6 border-b border-gray-200 flex justify-between items-center">
              <h3 class="font-bold text-lg text-secondary">Pedidos Recientes</h3>
              <a class="text-sm font-bold text-secondary hover:text-accent underline hover:no-underline transition-colors" href="/cuenta/pedidos">Ver todos</a>
            </div>

            <div class="overflow-x-auto">
              <table class="w-full text-left">
                <thead>
                  <tr class="bg-gray-50 text-gray-600 text-xs uppercase tracking-wider">
                    <th class="px-6 py-4">ID Pedido</th>
                    <th class="px-6 py-4">Fecha</th>
                    <th class="px-6 py-4">Estado</th>
                    <th class="px-6 py-4 text-right">Total</th>
                    <th class="px-6 py-4">Acciones</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  {recentOrders.map((order) => (
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 font-bold text-sm text-secondary">{order.id}</td>
                      <td class="px-6 py-4 text-sm text-gray-600">{order.date}</td>
                      <td class="px-6 py-4">
                        <span class={`px-2 py-1 text-xs font-bold rounded ${
                          order.statusColor === 'green' ? 'bg-green-100 text-green-700' :
                          order.statusColor === 'red' ? 'bg-red-100 text-red-700' :
                          'bg-gray-100 text-gray-700'
                        }`}>
                          {order.status}
                        </span>
                      </td>
                      <td class="px-6 py-4 text-sm font-bold text-secondary text-right">{order.total.toFixed(2)}€</td>
                      <td class="px-6 py-4">
                        <button class="text-secondary hover:text-accent font-bold text-sm transition-colors underline hover:no-underline">
                          Ver detalles
                        </button>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </section>

          <!-- Grid 2 Columnas -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Información de Perfil -->
            <div class="bg-white p-6 rounded-xl border border-gray-200 relative">
              <h3 class="font-bold mb-6 flex items-center gap-2 text-secondary">
                <i class="material-icons">account_circle</i>
                Perfil
              </h3>
              <div class="space-y-4">
                <div class="flex flex-col">
                  <span class="text-xs text-gray-600 uppercase">Nombre</span>
                  <span id="profile-name" class="font-medium text-secondary">Cargando...</span>
                </div>
                <div class="flex flex-col">
                  <span class="text-xs text-gray-600 uppercase">Email</span>
                  <span id="profile-email" class="font-medium text-secondary">Cargando...</span>
                </div>
                <div class="flex flex-col">
                  <span class="text-xs text-gray-600 uppercase">Teléfono</span>
                  <span id="profile-phone" class="font-medium text-secondary">---</span>
                </div>
              </div>
            </div>

            <!-- Dirección de Envío -->
            <div class="bg-white p-6 rounded-xl border border-gray-200">
              <h3 class="font-bold mb-6 flex items-center gap-2 text-secondary">
                <i class="material-icons">location_on</i>
                Dirección Principal
              </h3>
              <div class="space-y-2 mb-6">
                <p class="font-bold text-secondary">{mainAddress.name}</p>
                <p class="text-sm text-gray-600">{mainAddress.street}</p>
                <p class="text-sm text-gray-600">{mainAddress.city}</p>
              </div>
              <a href="/cuenta/direcciones" class="block w-full py-2 bg-gray-50 hover:bg-primary/20 hover:text-primary transition-all rounded-lg text-sm font-bold border border-gray-200 text-center">
                Ver Direcciones
              </a>
            </div>
          </div>

          <!-- Lista de Deseos -->
          <section>
            <div class="flex justify-between items-center mb-6">
              <h3 class="text-2xl font-black text-secondary">Tu Lista de Deseos</h3>
              <a href="/favoritos" class="text-sm font-bold text-secondary hover:text-accent underline hover:no-underline transition-colors">Ver todos</a>
            </div>

            <div id="wishlist-preview" class="grid grid-cols-2 lg:grid-cols-4 gap-4">
              <!-- Se cargará dinámicamente con JavaScript -->
            </div>

            <div id="empty-wishlist-preview" class="hidden text-center py-12 bg-gray-50 rounded-lg">
              <i class="material-icons text-gray-300 text-5xl mb-3">favorite_border</i>
              <p class="text-gray-500 mb-4">No tienes productos en tu lista de deseos</p>
              <a href="/" class="inline-block bg-primary hover:bg-yellow-400 text-black font-bold py-2 px-6 rounded-lg uppercase text-sm tracking-wider transition-all">
                Explorar Productos
              </a>
            </div>
          </section>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  import { getWishlist, removeFromWishlist } from '@/lib/wishlist';
  import { addToCart } from '@/lib/cart';
  import { toastSuccess, toastInfo } from '@/lib/toast';
  import { getCurrentCustomer, getCustomerFullName, logout } from '@/lib/auth';

  // Verificar autenticación
  function checkAuth() {
    const customer = getCurrentCustomer();

    if (!customer) {
      // Redirigir a login si no está autenticado
      window.location.href = '/login';
      return false;
    }

    return true;
  }

  // Cargar datos del usuario
  function loadUserData() {
    const customer = getCurrentCustomer();

    if (!customer) return;

    // Actualizar nombre en sidebar
    const userName = document.getElementById('user-name');
    if (userName) {
      userName.textContent = getCustomerFullName(customer);
    }

    // Actualizar estado VIP en sidebar
    const userStatus = document.getElementById('user-status');
    if (userStatus) {
      const memberSince = new Date(customer.createdAt).getFullYear();
      userStatus.textContent = customer.isVip
        ? `Cliente VIP desde ${memberSince}`
        : `Cliente desde ${memberSince}`;
    }

    // Actualizar información de perfil
    const profileName = document.getElementById('profile-name');
    if (profileName) {
      profileName.textContent = getCustomerFullName(customer);
    }

    const profileEmail = document.getElementById('profile-email');
    if (profileEmail) {
      profileEmail.textContent = customer.email;
    }

    const profilePhone = document.getElementById('profile-phone');
    if (profilePhone) {
      profilePhone.textContent = customer.phone || 'No especificado';
    }
  }

  // Cargar wishlist preview
  function loadWishlistPreview() {
    const wishlist = getWishlist();
    const preview = wishlist.slice(0, 4); // Mostrar máximo 4
    const wishlistPreview = document.getElementById('wishlist-preview');
    const emptyWishlistPreview = document.getElementById('empty-wishlist-preview');

    if (preview.length === 0) {
      wishlistPreview!.classList.add('hidden');
      emptyWishlistPreview!.classList.remove('hidden');
      return;
    }

    wishlistPreview!.classList.remove('hidden');
    emptyWishlistPreview!.classList.add('hidden');

    wishlistPreview!.innerHTML = preview.map(product => `
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden group hover:shadow-lg transition-all">
        <div class="aspect-square bg-gray-50 relative">
          <a href="/producto/${product.productSlug}">
            <img class="w-full h-full object-cover" src="${product.productImage || '/placeholder.jpg'}" alt="${product.productName}" />
          </a>
          <button
            class="remove-wishlist-btn absolute top-2 right-2 p-1.5 bg-white rounded-full text-red-500 shadow-sm hover:scale-110 transition-transform"
            data-product-id="${product.productId}"
          >
            <i class="material-icons text-sm">favorite</i>
          </button>
        </div>
        <div class="p-4">
          <a href="/producto/${product.productSlug}">
            <h4 class="font-bold text-sm mb-2 line-clamp-1 text-secondary">${product.productName}</h4>
          </a>
          <p class="font-black text-primary">${parseFloat(product.productPrice.toString()).toFixed(2)}€</p>
          <button
            class="add-to-cart-from-wishlist mt-3 w-full bg-secondary text-white hover:bg-primary hover:text-black py-2 rounded-lg font-bold text-xs uppercase transition-colors"
            data-product-id="${product.productId}"
            data-product-name="${product.productName}"
            data-product-slug="${product.productSlug}"
            data-product-price="${product.productPrice}"
            data-product-image="${product.productImage}"
          >
            Añadir al Carrito
          </button>
        </div>
      </div>
    `).join('');

    // Event listeners para botones de eliminar
    document.querySelectorAll('.remove-wishlist-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const productId = (btn as HTMLElement).dataset.productId || '';
        removeFromWishlist(productId);
        loadWishlistPreview();
        toastSuccess('Eliminado de favoritos');
      });
    });

    // Event listeners para botones de añadir al carrito
    document.querySelectorAll('.add-to-cart-from-wishlist').forEach(btn => {
      btn.addEventListener('click', () => {
        const button = btn as HTMLElement;
        addToCart({
          productId: button.dataset.productId || '',
          productName: button.dataset.productName || '',
          productSlug: button.dataset.productSlug || '',
          productImage: button.dataset.productImage || '',
          quantity: 1,
          unitPrice: parseFloat(button.dataset.productPrice || '0'),
        });
        button.textContent = '¡Añadido!';
        button.classList.add('bg-green-600');
        setTimeout(() => {
          button.textContent = 'Añadir al Carrito';
          button.classList.remove('bg-green-600');
        }, 1500);
        toastSuccess('Añadido al carrito');
      });
    });
  }

  // Cargar al iniciar
  document.addEventListener('DOMContentLoaded', () => {
    // Verificar autenticación primero
    if (!checkAuth()) return;

    // Cargar datos del usuario
    loadUserData();

    // Cargar wishlist
    loadWishlistPreview();
  });

  // Actualizar cuando cambie la wishlist
  window.addEventListener('wishlist-updated', () => {
    loadWishlistPreview();
  });

  // Cerrar sesión
  document.querySelector('aside button')?.addEventListener('click', () => {
    logout();
    toastInfo('Sesión cerrada correctamente');
    setTimeout(() => {
      window.location.href = '/';
    }, 500);
  });

  // Ver detalles del pedido
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.tagName === 'BUTTON' && target.textContent?.trim() === 'Ver detalles') {
      const orderId = target.closest('tr')?.querySelector('td:first-child')?.textContent;
      if (orderId) {
        window.location.href = `/cuenta/pedido/${orderId}`;
      }
    }
  });
</script>
