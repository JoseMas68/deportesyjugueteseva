<Layout title="Ofertas y Descuentos - Deportes y Juguetes Eva" description="Descubre nuestras mejores ofertas en deportes, juguetes y hobbies. ¡Ahorra hasta un 50%!">
  <Header />

  <main class="bg-background-light min-h-screen">
    <!-- Hero Banner de Ofertas -->
    <section class="bg-gradient-to-r from-accent via-red-500 to-accent text-white py-16 relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute transform rotate-12 -left-20 top-10 text-9xl font-black">%</div>
        <div class="absolute transform -rotate-12 right-10 bottom-10 text-9xl font-black">%</div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-block bg-white text-accent px-6 py-2 rounded-full font-bold text-sm mb-4 animate-pulse">
            ¡OFERTAS LIMITADAS!
          </div>
          <h1 class="text-5xl md:text-7xl font-display font-extrabold uppercase italic mb-4">
            Super <span class="text-primary">Ofertas</span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 font-medium">
            Descuentos de hasta el 50% en productos seleccionados
          </p>
          <div class="flex items-center justify-center gap-4 flex-wrap">
            <div class="bg-white/20 backdrop-blur-sm px-6 py-3 rounded-lg">
              <i class="material-icons text-primary mr-2">local_shipping</i>
              <span class="font-bold">Envío gratis en pedidos +50€</span>
            </div>
            <div class="bg-white/20 backdrop-blur-sm px-6 py-3 rounded-lg">
              <i class="material-icons text-primary mr-2">verified</i>
              <span class="font-bold">Garantía de satisfacción</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Breadcrumb -->
    <div class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center text-sm">
          <a href="/" class="text-gray-500 hover:text-secondary transition-colors">Inicio</a>
          <i class="material-icons text-gray-400 text-sm mx-2">chevron_right</i>
          <span class="text-secondary font-medium">Ofertas</span>
        </nav>
      </div>
    </div>

    <div class="container mx-auto px-4 py-12">
      <!-- Ofertas Destacadas -->
      <section class="mb-16">
        <div class="flex items-center justify-between mb-8">
          <div>
            <div class="mb-2">
              <h2 class="text-3xl md:text-4xl font-display font-extrabold text-secondary inline">
                Ofertas
              </h2>
              <h2 class="text-3xl md:text-4xl font-display font-extrabold text-accent inline ml-2">
                Destacadas
              </h2>
            </div>
            <div class="h-1 w-20 bg-accent mb-2"></div>
            <p class="text-gray-600">Los mejores descuentos que no puedes dejar pasar</p>
          </div>
          <div class="hidden md:flex items-center gap-2 text-accent">
            <i class="material-icons animate-pulse">schedule</i>
            <span class="font-bold">¡Por tiempo limitado!</span>
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
          {ofertasDestacadas.map((producto) => (
            <div class="bg-surface-light rounded-xl shadow-sm border border-gray-100 hover:shadow-xl transition group">
              <div class="relative">
                {/* Timer de oferta */}
                {producto.endsIn && (
                  <div class="absolute top-3 left-3 z-20 bg-black/80 text-white px-2 py-1 rounded-full text-xs font-bold flex items-center gap-1">
                    <i class="material-icons text-xs">schedule</i>
                    {producto.endsIn}
                  </div>
                )}

                {/* Badge de descuento */}
                <span class="absolute top-3 right-3 bg-accent text-white text-xs font-bold px-2 py-1 rounded z-10">
                  {producto.badge}
                </span>

                <div class="aspect-square bg-gray-50 rounded-t-xl overflow-hidden">
                  <img
                    src={producto.image}
                    alt={producto.name}
                    class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
                  />
                </div>
              </div>

              <div class="p-4">
                <p class="text-xs text-gray-500 mb-1">{producto.category}</p>
                <h3 class="font-bold text-secondary text-lg leading-tight mb-2 group-hover:text-gray-600 transition-colors">
                  {producto.name}
                </h3>

                <div class="flex items-end gap-2 mb-2">
                  <p class="text-2xl font-black text-accent">{producto.price.toFixed(2)}€</p>
                  <p class="text-sm text-gray-400 line-through mb-1">{producto.originalPrice.toFixed(2)}€</p>
                </div>

                <p class="text-xs text-green-600 font-bold">
                  Ahorras: {(producto.originalPrice - producto.price).toFixed(2)}€
                </p>
              </div>
            </div>
