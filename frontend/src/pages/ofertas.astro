          <button class="px-4 py-2 bg-primary text-secondary font-bold rounded-lg hover:bg-yellow-400 transition-colors">
            Todos
          </button>
          <button class="px-4 py-2 bg-white border border-gray-200 text-gray-700 font-medium rounded-lg hover:bg-secondary hover:text-primary transition-colors">
            <i class="material-icons text-sm mr-1">sports_soccer</i>
            Deportes
          </button>
          <button class="px-4 py-2 bg-white border border-gray-200 text-gray-700 font-medium rounded-lg hover:bg-secondary hover:text-primary transition-colors">
            <i class="material-icons text-sm mr-1">toys</i>
            Juguetes
          </button>
          <button class="px-4 py-2 bg-white border border-gray-200 text-gray-700 font-medium rounded-lg hover:bg-secondary hover:text-primary transition-colors">
            <i class="material-icons text-sm mr-1">palette</i>
            Hobbies
          </button>
          <button class="px-4 py-2 bg-white border border-accent text-accent font-medium rounded-lg hover:bg-accent hover:text-white transition-colors">
            <i class="material-icons text-sm mr-1">local_fire_department</i>
            Más del 30% OFF
          </button>
        </div>

        <!-- Grid de productos -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-6">
          {todasLasOfertas.map((producto) => (
            <ProductCard product={producto} />
          ))}
        </div>

        <!-- Paginación -->
        <div class="mt-12 flex justify-center">
          <nav class="flex items-center gap-2">
            <button class="px-4 py-2 border border-gray-200 rounded-lg text-gray-400 cursor-not-allowed" disabled>
              <i class="material-icons text-sm">chevron_left</i>
            </button>
            <button class="px-4 py-2 bg-primary text-secondary font-bold rounded-lg">1</button>
            <button class="px-4 py-2 border border-gray-200 rounded-lg text-gray-700 hover:bg-secondary hover:text-primary hover:border-secondary transition-colors">2</button>
            <button class="px-4 py-2 border border-gray-200 rounded-lg text-gray-700 hover:bg-secondary hover:text-primary hover:border-secondary transition-colors">3</button>
            <button class="px-4 py-2 border border-gray-200 rounded-lg text-gray-700 hover:bg-secondary hover:text-primary hover:border-secondary transition-colors">
              <i class="material-icons text-sm">chevron_right</i>
            </button>
          </nav>
        </div>
      </section>

      <!-- Banner de Newsletter -->
      <section class="mt-16">
        <div class="bg-primary rounded-xl p-8 md:p-12 relative overflow-hidden shadow-lg">
          <!-- Elementos decorativos -->
          <div class="absolute right-0 top-0 w-64 h-full bg-black opacity-10 transform skew-x-12 translate-x-12"></div>
          <div class="absolute left-10 top-1/2 -translate-y-1/2 opacity-10">
            <i class="material-icons" style="font-size: 120px;">mail</i>
          </div>

          <div class="relative z-10">
            <div class="text-center mb-8">
              <!-- Icono destacado -->
              <div class="inline-flex items-center justify-center w-20 h-20 bg-secondary rounded-2xl shadow-xl mb-4 transform hover:scale-110 transition-transform">
                <i class="material-icons text-primary" style="font-size: 48px;">campaign</i>
              </div>

              <h3 class="text-3xl md:text-4xl font-display font-extrabold text-secondary mb-3">
                ¡No te pierdas nuestras <span class="inline-block">ofertas exclusivas</span>!
              </h3>
              <p class="text-secondary font-bold text-lg md:text-xl">
                Suscríbete y recibe un <span class="bg-secondary text-primary px-2 py-1 rounded">10% OFF</span> en tu primera compra
              </p>
            </div>

            <form class="max-w-2xl mx-auto flex flex-col sm:flex-row gap-3">
              <input
                type="email"
                placeholder="Introduce tu email..."
                class="flex-1 px-6 py-4 rounded-lg text-gray-900 font-medium focus:outline-none focus:ring-4 focus:ring-secondary/30 shadow-md"
                required
              />
              <button
                type="submit"
                class="bg-secondary text-white hover:bg-black px-8 py-4 rounded-lg font-bold shadow-lg transition transform hover:-translate-y-1 whitespace-nowrap"
              >
                Suscribirse Ahora
              </button>
            </form>
          </div>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  // Filtros de categoría
  const filterButtons = document.querySelectorAll('button[class*="border-gray-200"]');
  const allButton = filterButtons[0];

  filterButtons.forEach((button, index) => {
    button.addEventListener('click', () => {
      // Remover selección de todos
      filterButtons.forEach(btn => {
        btn.classList.remove('bg-primary', 'text-secondary', 'border-primary');
        btn.classList.add('bg-white', 'border-gray-200', 'text-gray-700');
      });

      // Seleccionar el clickeado
      button.classList.remove('bg-white', 'border-gray-200', 'text-gray-700');
      button.classList.add('bg-primary', 'text-secondary', 'border-primary');

      // Aquí iría la lógica de filtrado cuando se conecte al backend
      console.log('Filter clicked:', button.textContent?.trim());
    });
  });

  // Prevenir envío del formulario de newsletter (por ahora)
  const newsletterForm = document.querySelector('form');
  newsletterForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('¡Gracias por suscribirte! Esta funcionalidad se activará cuando el backend esté conectado.');
  });
</script>

