---
export const prerender = false;

import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ProductSlider from '@/components/ProductSlider.astro';
import { getProducts, type Product } from '@/lib/api';

// Obtener ofertas desde la API (productos con descuento)
let ofertasDestacadas: Product[] = [];
let todasLasOfertas: Product[] = [];

try {
  // Obtener todas las ofertas
  const todasResult = await getProducts({
    limit: 50,
  });

  // Filtrar solo productos con descuento (compareAtPrice > price)
  const productosConDescuento = todasResult.products.filter(
    p => p.compareAtPrice && p.compareAtPrice > p.price
  );

  // Ofertas destacadas (primeras 8)
  ofertasDestacadas = productosConDescuento.slice(0, 8);

  // Todas las ofertas
  todasLasOfertas = productosConDescuento;
} catch (error) {
  console.error('Error al cargar ofertas:', error);
  ofertasDestacadas = [];
  todasLasOfertas = [];
}
---

<Layout title="Ofertas y Descuentos - Deportes y Juguetes Eva" description="Descubre nuestras mejores ofertas en deportes, juguetes y hobbies. ¡Ahorra hasta un 50%!">
  <Header />

  <main class="bg-background-light min-h-screen">
    <!-- Hero Banner de Ofertas -->
    <section class="bg-gradient-to-r from-accent via-red-500 to-accent text-white py-16 relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute transform rotate-12 -left-20 top-10 text-9xl font-black">%</div>
        <div class="absolute transform -rotate-12 right-10 bottom-10 text-9xl font-black">%</div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-block bg-white text-accent px-6 py-2 rounded-full font-bold text-sm mb-4 animate-pulse">
            ¡OFERTAS LIMITADAS!
          </div>
          <h1 class="text-5xl md:text-7xl font-display font-extrabold uppercase italic mb-4">
            Super <span class="text-primary">Ofertas</span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 font-medium">
            Descuentos de hasta el 50% en productos seleccionados
          </p>
          <div class="flex items-center justify-center gap-4 flex-wrap">
            <div class="bg-white/20 backdrop-blur-sm px-6 py-3 rounded-lg">
              <i class="material-icons text-primary mr-2">local_shipping</i>
              <span class="font-bold">Envío gratis en pedidos +50€</span>
            </div>
            <div class="bg-white/20 backdrop-blur-sm px-6 py-3 rounded-lg">
              <i class="material-icons text-primary mr-2">verified</i>
              <span class="font-bold">Garantía de satisfacción</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Breadcrumb -->
    <div class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center text-sm">
          <a href="/" class="text-gray-500 hover:text-secondary transition-colors">Inicio</a>
          <i class="material-icons text-gray-400 text-sm mx-2">chevron_right</i>
          <span class="text-secondary font-medium">Ofertas</span>
        </nav>
      </div>
    </div>

    <!-- Ofertas Destacadas con Slider -->
    {ofertasDestacadas.length > 0 && (
      <ProductSlider
        title="Ofertas Destacadas"
        products={ofertasDestacadas}
        linkUrl="/ofertas"
        linkText="Ver todas"
        sliderId="ofertas-destacadas"
        accentColor="accent"
      />
    )}

    <!-- Todas las Ofertas con Slider -->
    {todasLasOfertas.length > 0 && (
      <ProductSlider
        title="Todas las Ofertas"
        products={todasLasOfertas}
        linkUrl="/ofertas"
        linkText=""
        sliderId="todas-ofertas"
        accentColor="accent"
      />
    )}

    <!-- Mensaje si no hay ofertas -->
    {todasLasOfertas.length === 0 && (
      <div class="container mx-auto px-4 py-16">
        <div class="text-center">
          <i class="material-icons text-6xl text-gray-300 mb-4">local_offer</i>
          <h2 class="text-2xl font-bold text-secondary mb-2">No hay ofertas disponibles</h2>
          <p class="text-gray-500 mb-6">Vuelve pronto para ver nuestras próximas promociones.</p>
          <a href="/" class="inline-block bg-primary hover:bg-yellow-400 text-secondary font-bold py-3 px-8 rounded-lg transition">
            Ver todos los productos
          </a>
        </div>
      </div>
    )}

    <!-- Banner de Newsletter -->
    <div class="container mx-auto px-4 py-12">
      <section>
        <div class="bg-primary rounded-xl p-8 md:p-12 relative overflow-hidden shadow-lg">
          <!-- Elementos decorativos -->
          <div class="absolute right-0 top-0 w-64 h-full bg-black opacity-10 transform skew-x-12 translate-x-12"></div>
          <div class="absolute left-10 top-1/2 -translate-y-1/2 opacity-10">
            <i class="material-icons" style="font-size: 120px;">mail</i>
          </div>

          <div class="relative z-10">
            <div class="text-center mb-8">
              <!-- Icono destacado -->
              <div class="inline-flex items-center justify-center w-20 h-20 bg-secondary rounded-2xl shadow-xl mb-4 transform hover:scale-110 transition-transform">
                <i class="material-icons text-primary" style="font-size: 48px;">campaign</i>
              </div>

              <h3 class="text-3xl md:text-4xl font-display font-extrabold text-secondary mb-3">
                ¡No te pierdas nuestras <span class="inline-block">ofertas exclusivas</span>!
              </h3>
              <p class="text-secondary font-bold text-lg md:text-xl">
                Suscríbete y recibe un <span class="bg-secondary text-primary px-2 py-1 rounded">10% OFF</span> en tu primera compra
              </p>
            </div>

            <form class="max-w-2xl mx-auto flex flex-col sm:flex-row gap-3">
              <input
                type="email"
                placeholder="Introduce tu email..."
                class="flex-1 px-6 py-4 rounded-lg text-gray-900 font-medium focus:outline-none focus:ring-4 focus:ring-secondary/30 shadow-md"
                required
              />
              <button
                type="submit"
                class="bg-secondary text-white hover:bg-black px-8 py-4 rounded-lg font-bold shadow-lg transition transform hover:-translate-y-1 whitespace-nowrap"
              >
                Suscribirse Ahora
              </button>
            </form>
          </div>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  // Prevenir envío del formulario de newsletter (por ahora)
  const newsletterForm = document.querySelector('form');
  newsletterForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('¡Gracias por suscribirte! Esta funcionalidad se activará cuando el backend esté conectado.');
  });
</script>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
