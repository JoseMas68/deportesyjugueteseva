---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getProducts } from '@/lib/api';

// Obtener orderId de la URL
const orderId = Astro.url.searchParams.get('orderId');

// Intentar obtener datos del pedido desde la API
let order = null;
let orderError = false;

if (orderId) {
  try {
    const response = await fetch(`${import.meta.env.PUBLIC_API_URL || 'http://localhost:3000'}/api/orders/${orderId}`);
    if (response.ok) {
      const data = await response.json();
      order = data.order;
    } else {
      orderError = true;
    }
  } catch (e) {
    orderError = true;
  }
}

// Calcular fecha estimada de entrega (3-5 dias habiles)
const getEstimatedDelivery = () => {
  const today = new Date();
  today.setDate(today.getDate() + 4);
  return today.toLocaleDateString('es-ES', { weekday: 'long', day: 'numeric', month: 'long' });
};

// Obtener productos sugeridos desde la API
const suggestedResult = await getProducts({ limit: 4, featured: true });
const suggestedProducts = suggestedResult.products;
---

<Layout title="Pedido Confirmado - Deportes y Juguetes Eva" description="Tu pedido ha sido confirmado">
  <Header />

  <main class="bg-background-light min-h-screen">
    <div class="container mx-auto px-4 py-8 lg:py-12">
      <!-- Hero de Confirmacion -->
      <div class="text-center mb-12">
        <div class="mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-green-100 mb-6">
          <i class="material-icons text-5xl text-green-600">check_circle</i>
        </div>

        <h1 class="text-4xl font-display font-extrabold text-secondary tracking-tight mb-2">
          ¡Gracias por tu pedido!
        </h1>
        {order ? (
          <>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              Tu pedido <span class="font-bold text-secondary">{order.orderNumber}</span> ha sido confirmado y pronto estará en camino.
            </p>
            <p class="text-sm text-gray-600 mt-2">
              Hemos enviado un correo de confirmación a <span class="font-medium">{order.email}</span>
            </p>
          </>
        ) : (
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Tu pedido ha sido confirmado y pronto estará en camino.
          </p>
        )}
      </div>

      <div class="grid lg:grid-cols-12 gap-8">
        <!-- Contenido Principal -->
        <div class="lg:col-span-8 space-y-8">
          <!-- Estado del Envio -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
            <h2 class="text-xl font-display font-bold text-secondary mb-6 flex items-center gap-2">
              <i class="material-icons text-secondary">local_shipping</i>
              Estado del Envío
            </h2>

            <!-- Barra de progreso -->
            <div class="relative">
              <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-200">
                <div class="progress-bar shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-green-500 transition-all duration-500" style="width: 25%"></div>
              </div>

              <div class="flex justify-between text-xs sm:text-sm font-medium text-gray-600">
                <div class="text-green-600 font-bold">Confirmado</div>
                <div>Procesando</div>
                <div>Enviado</div>
                <div>Entregado</div>
              </div>
            </div>

            <!-- Card fecha estimada -->
            <div class="mt-8 bg-background-light rounded-lg p-4 border border-gray-200 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
              <div>
                <p class="text-sm text-gray-600">Fecha estimada de entrega</p>
                <p class="text-lg font-bold text-secondary capitalize">{getEstimatedDelivery()}</p>
              </div>
              <a href="/cuenta/pedidos" class="text-sm font-semibold text-secondary hover:underline">
                Ver mis pedidos
              </a>
            </div>
          </div>

          <!-- Resumen de Articulos -->
          {order && order.items && order.items.length > 0 && (
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
              <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-display font-bold text-secondary">Resumen de Artículos</h2>
              </div>

              <ul class="divide-y divide-gray-200" role="list">
                {order.items.map((item: any) => (
                  <li class="p-6 flex flex-col sm:flex-row gap-6">
                    <div class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-md border border-gray-200 bg-white">
                      <img
                        class="h-full w-full object-cover object-center"
                        src={item.product?.thumbnailUrl || item.product?.images?.[0] || '/placeholder.jpg'}
                        alt={item.productName}
                      />
                    </div>
                    <div class="flex flex-1 flex-col">
                      <div>
                        <div class="flex justify-between text-base font-medium text-secondary">
                          <h3>
                            <a href={`/producto/${item.product?.slug || '#'}`} class="hover:text-gray-700 transition-colors">
                              {item.productName}
                            </a>
                          </h3>
                          <p class="ml-4">{parseFloat(item.unitPrice).toFixed(2)}€</p>
                        </div>
                        {item.variant && <p class="mt-1 text-sm text-gray-600">{item.variant}</p>}
                      </div>
                      <div class="flex flex-1 items-end justify-between text-sm">
                        <p class="text-gray-600">Cant: {item.quantity}</p>
                      </div>
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Botones de Accion -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <button class="w-full bg-secondary text-white hover:bg-black font-bold py-3 px-4 rounded-lg shadow transition-colors flex justify-center items-center gap-2">
              <i class="material-icons">print</i>
              Descargar Factura
            </button>
            <a href="/" class="w-full bg-secondary text-white hover:bg-black font-bold py-3 px-4 rounded-lg shadow transition-colors text-center flex justify-center items-center gap-2">
              <i class="material-icons">shopping_bag</i>
              Seguir Comprando
            </a>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-4 space-y-6">
          <!-- Resumen del Pedido -->
          {order && (
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
              <h2 class="text-lg font-display font-bold text-secondary mb-6">Resumen del Pedido</h2>
              <div class="flow-root">
                <dl class="-my-4 text-sm divide-y divide-gray-200">
                  <div class="py-4 flex items-center justify-between">
                    <dt class="text-gray-600">Subtotal</dt>
                    <dd class="font-medium text-secondary">{parseFloat(order.subtotal).toFixed(2)}€</dd>
                  </div>
                  <div class="py-4 flex items-center justify-between">
                    <dt class="text-gray-600">Envío</dt>
                    <dd class="font-medium text-secondary">{parseFloat(order.shippingCost).toFixed(2)}€</dd>
                  </div>
                  <div class="py-4 flex items-center justify-between">
                    <dt class="text-gray-600">IVA incluido (21%)</dt>
                    <dd class="font-medium text-secondary">{parseFloat(order.tax).toFixed(2)}€</dd>
                  </div>
                  <div class="py-4 flex items-center justify-between border-t-2 border-secondary">
                    <dt class="text-base font-bold text-secondary">Total</dt>
                    <dd class="text-xl font-display font-bold text-secondary">{parseFloat(order.total).toFixed(2)}€</dd>
                  </div>
                </dl>
              </div>
            </div>
          )}

          <!-- Direccion de Envio -->
          {order && (
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
              <h3 class="text-lg font-display font-bold text-secondary mb-4">Dirección de Envío</h3>
              <address class="not-italic text-sm text-gray-600 space-y-2">
                <p class="font-bold text-secondary">{order.shippingName}</p>
                <p>{order.shippingAddress}</p>
                <p>{order.shippingPostalCode}, {order.shippingCity}</p>
                <p>{order.shippingProvince}, {order.shippingCountry || 'España'}</p>
                {order.shippingPhone && (
                  <p class="mt-4 flex items-center gap-2">
                    <i class="material-icons text-base">phone</i>
                    {order.shippingPhone}
                  </p>
                )}
              </address>
            </div>
          )}

          <!-- Metodo de Pago -->
          {order && (
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
              <h3 class="text-lg font-display font-bold text-secondary mb-4">Método de Pago</h3>
              <div class="flex items-center gap-3 text-sm text-gray-600">
                <i class="material-icons text-3xl text-secondary">credit_card</i>
                <div class="flex flex-col">
                  <span class="font-medium text-secondary">{order.paymentMethod || 'Tarjeta de crédito'}</span>
                  <span>Pago completado</span>
                </div>
              </div>
            </div>
          )}

          <!-- Info si no hay pedido -->
          {!order && (
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
              <h2 class="text-lg font-display font-bold text-secondary mb-4">Información</h2>
              <p class="text-sm text-gray-600">
                Los detalles de tu pedido se han enviado a tu correo electrónico.
              </p>
              <a href="/cuenta/pedidos" class="mt-4 inline-block text-sm font-semibold text-secondary hover:underline">
                Ver mis pedidos →
              </a>
            </div>
          )}
        </div>
      </div>

      <!-- Tambien te podria interesar -->
      {suggestedProducts.length > 0 && (
        <section class="mt-16 border-t border-gray-200 pt-12">
          <h2 class="text-3xl font-display font-extrabold uppercase italic text-secondary mb-8">
            También te Podría Interesar
          </h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {suggestedProducts.map((product: any) => (
              <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-all group">
                <div class="aspect-square bg-gray-50 flex items-center justify-center overflow-hidden relative">
                  <img
                    class="object-contain h-48 group-hover:scale-110 transition duration-300"
                    src={product.thumbnailUrl || product.images?.[0] || '/placeholder.jpg'}
                    alt={product.name}
                  />
                </div>
                <div class="p-4">
                  <p class="text-xs text-gray-500 mb-1">{product.category?.name || 'Deportes'}</p>
                  <h3 class="font-bold text-secondary text-sm leading-tight mb-2 line-clamp-2">{product.name}</h3>
                  <p class="text-lg font-bold text-secondary mb-3">{parseFloat(product.price).toFixed(2)}€</p>
                  <a
                    href={`/producto/${product.slug}`}
                    class="w-full bg-secondary text-white hover:bg-black py-2 px-4 rounded-lg font-bold text-sm uppercase transition-colors text-center block"
                  >
                    Ver Producto
                  </a>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}
    </div>
  </main>

  <Footer />
</Layout>

<script>
  // Animacion de la barra de progreso al cargar
  document.addEventListener('DOMContentLoaded', () => {
    const progressBar = document.querySelector('.progress-bar') as HTMLElement | null;
    if (progressBar) {
      progressBar.style.width = '0%';
      setTimeout(() => {
        progressBar.style.width = '25%';
      }, 300);
    }
  });

  // Funcion para descargar factura (simulada)
  const downloadButton = document.querySelector('button');
  downloadButton?.addEventListener('click', () => {
    alert('Generando factura... (En produccion se descargaria un PDF)');
  });
</script>
