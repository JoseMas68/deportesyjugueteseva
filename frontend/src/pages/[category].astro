            <div class="flex items-center gap-4">
              <!-- Vista (Grid/List) -->
              <div class="flex items-center gap-2 bg-white rounded-lg border border-gray-200 p-1">
                <button class="p-2 bg-primary rounded text-secondary" aria-label="Vista de cuadrícula">
