---
export const prerender = false;

import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ProductCard from '@/components/ProductCard.astro';
import { getProducts } from '@/lib/api';

const categorySlug = Astro.params.category || 'deportes';

// Mapeo de slugs de URL a nombres de categoría legibles
const categoryNames: Record<string, string> = {
  'deportes': 'Deportes',
  'juguetes': 'Juguetes',
  'hobbies': 'Hobbies y Coleccionismo',
  'running': 'Running',
  'trail-running': 'Trail Running',
  'fitness': 'Fitness',
  'natacion': 'Natación',
  'outdoor': 'Outdoor',
  'casual': 'Casual',
  'infantiles': 'Juguetes Infantiles',
  'educativos': 'Juguetes Educativos',
  'aire-libre': 'Aire Libre',
  'scalextric': 'Scalextric',
  'trenes': 'Trenes',
  'maquetas': 'Maquetas'
};

const categoryName = categoryNames[categorySlug] || categorySlug.charAt(0).toUpperCase() + categorySlug.slice(1);

// Obtener parámetros de filtros desde la URL
const url = new URL(Astro.request.url);
const minPrice = url.searchParams.get('minPrice');
const maxPrice = url.searchParams.get('maxPrice');
const brand = url.searchParams.get('brand');
const color = url.searchParams.get('color');
const sportType = url.searchParams.get('sportType');
const productType = url.searchParams.get('productType');
const collectionType = url.searchParams.get('collectionType');
const inStock = url.searchParams.get('inStock');
const sort = url.searchParams.get('sort') || 'relevance';
const page = parseInt(url.searchParams.get('page') || '1');
const limit = 12;
const offset = (page - 1) * limit;

// Obtener productos desde la API
let products = [];
let total = 0;

try {
  const filters: Record<string, any> = {
    category: categorySlug,
    limit,
    offset
  };

  if (minPrice) filters.minPrice = parseFloat(minPrice);
  if (maxPrice) filters.maxPrice = parseFloat(maxPrice);
  if (brand) filters.brand = brand;
  if (color) filters.color = color;
  if (sportType) filters.sportType = sportType;
  if (productType) filters.productType = productType;
  if (collectionType) filters.collectionType = collectionType;
  if (inStock === 'true') filters.inStock = true;
  if (sort && sort !== 'relevance') filters.sort = sort;

  const result = await getProducts(filters);
  products = result.products;
  total = result.total;
} catch (error) {
  console.error('Error al cargar productos de categoría:', error);
  products = [];
  total = 0;
}

// Calcular paginación
const totalPages = Math.ceil(total / limit);

// Filtros disponibles
const priceRanges = [
  { label: 'Menos de 25€', minPrice: 0, maxPrice: 25 },
  { label: '25€ - 50€', minPrice: 25, maxPrice: 50 },
  { label: '50€ - 100€', minPrice: 50, maxPrice: 100 },
  { label: 'Más de 100€', minPrice: 100, maxPrice: 9999 }
];

// Marcas únicas de los productos (extraídas de la base de datos)
const brandList = ['Nike', 'Adidas', 'Salomon', 'Arena', 'Speedo', 'Puma', 'The North Face', 'LEGO', 'Hasbro', 'Scalextric', 'Märklin'];

// Colores disponibles
const colorList = ['Negro', 'Blanco', 'Azul', 'Rojo', 'Verde', 'Amarillo', 'Naranja', 'Rosa', 'Gris', 'Multicolor'];

// Tipos de deporte (solo para la categoría principal "deportes")
const sportTypeList = [
  { value: 'RUNNING', label: 'Running' },
  { value: 'TRAIL_RUNNING', label: 'Trail Running' },
  { value: 'FITNESS', label: 'Fitness' },
  { value: 'NATACION', label: 'Natación' },
  { value: 'OUTDOOR', label: 'Outdoor' },
  { value: 'CASUAL', label: 'Casual' },
];

// Tipos de producto por sección
const productTypeDeportes = [
  { value: 'ZAPATILLAS', label: 'Zapatillas' },
  { value: 'CAMISETAS', label: 'Camisetas' },
  { value: 'PANTALONES', label: 'Pantalones' },
  { value: 'CHAQUETAS', label: 'Chaquetas' },
  { value: 'GORRAS', label: 'Gorras' },
  { value: 'CALCETINES', label: 'Calcetines' },
  { value: 'ACCESORIOS', label: 'Accesorios' },
  { value: 'EQUIPAMIENTO', label: 'Equipamiento' },
];

const productTypeJuguetes = [
  { value: 'MUNECAS', label: 'Muñecas' },
  { value: 'VEHICULOS', label: 'Vehículos' },
  { value: 'CONSTRUCCION', label: 'Construcción' },
  { value: 'JUEGOS_MESA', label: 'Juegos de Mesa' },
  { value: 'PELUCHES', label: 'Peluches' },
  { value: 'FIGURAS', label: 'Figuras' },
];

const productTypeHobbies = [
  { value: 'CIRCUITOS', label: 'Circuitos' },
  { value: 'TRENES', label: 'Trenes' },
  { value: 'MAQUETAS_AVIONES', label: 'Maquetas Aviones' },
  { value: 'MAQUETAS_COCHES', label: 'Maquetas Coches' },
  { value: 'MAQUETAS_BARCOS', label: 'Maquetas Barcos' },
];

// Tipos de colección (solo para la categoría principal "hobbies")
const collectionTypeList = [
  { value: 'SCALEXTRIC', label: 'Scalextric' },
  { value: 'TRENES_ELECTRICOS', label: 'Trenes Eléctricos' },
  { value: 'MAQUETAS', label: 'Maquetas' },
  { value: 'OTROS', label: 'Otros' },
];

// Determinar qué filtros mostrar según la categoría
const isDeportes = categorySlug === 'deportes' || ['running', 'trail-running', 'fitness', 'natacion', 'outdoor', 'casual'].includes(categorySlug);
const isJuguetes = categorySlug === 'juguetes' || ['infantiles', 'educativos', 'aire-libre'].includes(categorySlug);
const isHobbies = categorySlug === 'hobbies' || ['scalextric', 'trenes', 'maquetas'].includes(categorySlug);

// Solo mostrar filtro de tipo de deporte en la categoría principal "deportes"
const showSportTypeFilter = categorySlug === 'deportes';
// Solo mostrar filtro de tipo de colección en la categoría principal "hobbies"
const showCollectionTypeFilter = categorySlug === 'hobbies';

// Determinar qué tipos de producto mostrar
const productTypeList = isDeportes ? productTypeDeportes : isJuguetes ? productTypeJuguetes : isHobbies ? productTypeHobbies : [];

// Verificar qué filtros están activos
const activePriceMin = minPrice ? parseFloat(minPrice) : null;
const activePriceMax = maxPrice ? parseFloat(maxPrice) : null;
const activeBrand = brand || null;
const activeColor = color || null;
const activeSportType = sportType || null;
const activeProductType = productType || null;
const activeCollectionType = collectionType || null;
const activeInStock = inStock === 'true';

// Construir URL base para filtros
function buildFilterUrl(params: Record<string, string | null>) {
  const newUrl = new URL(url);
  Object.entries(params).forEach(([key, value]) => {
    if (value === null) {
      newUrl.searchParams.delete(key);
    } else {
      newUrl.searchParams.set(key, value);
    }
  });
  // Reset to page 1 when filters change
  newUrl.searchParams.delete('page');
  return newUrl.pathname + newUrl.search;
}
