---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

const menuItems = [
  { icon: 'dashboard', label: 'Panel de Control', href: '/cuenta', active: false },
  { icon: 'shopping_bag', label: 'Mis Pedidos', href: '/cuenta/pedidos', active: false },
  { icon: 'account_circle', label: 'Detalles de Cuenta', href: '/cuenta/detalles', active: true },
  { icon: 'location_on', label: 'Direcciones', href: '/cuenta/direcciones', active: false },
  { icon: 'favorite', label: 'Lista de Deseos', href: '/favoritos', active: false }
];
---

<Layout title="Detalles de Cuenta - Deportes y Juguetes Eva" description="Gestiona tu información personal">
  <Header />

  <main class="bg-background-light min-h-screen">
    <!-- Breadcrumb -->
    <div class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center text-sm">
          <a href="/" class="text-gray-500 hover:text-secondary transition-colors">Inicio</a>
          <i class="material-icons text-gray-400 text-sm mx-2">chevron_right</i>
          <a href="/cuenta" class="text-gray-500 hover:text-secondary transition-colors">Mi Cuenta</a>
          <i class="material-icons text-gray-400 text-sm mx-2">chevron_right</i>
          <span class="text-secondary font-medium">Detalles de Cuenta</span>
        </nav>
      </div>
    </div>

    <div class="container mx-auto px-4 py-8 lg:py-12">
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Sidebar de Navegación -->
        <aside class="w-full lg:w-72 shrink-0">
          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 sticky top-24">
            <div class="mb-8">
              <h1 id="user-name" class="text-xl font-bold text-secondary">Mi Cuenta</h1>
              <span id="user-status" class="inline-block bg-primary text-black text-xs font-bold px-3 py-1 rounded-full mt-2">Cliente</span>
            </div>

            <nav class="flex flex-col gap-1">
              {menuItems.map((item) => (
                <a
                  class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-all ${
                    item.active
                      ? 'bg-primary text-black font-bold'
                      : 'hover:bg-gray-50 text-gray-700'
                  }`}
                  href={item.href}
                >
                  <i class="material-icons text-xl">{item.icon}</i>
                  <span>{item.label}</span>
                </a>
              ))}

              <!-- Botón logout -->
              <div class="mt-8 pt-6 border-t border-gray-200">
                <button id="logout-btn" class="w-full flex items-center justify-center gap-2 bg-secondary text-white py-3 rounded-lg font-bold hover:bg-black transition-all">
                  <i class="material-icons text-sm">logout</i>
                  Cerrar Sesión
                </button>
              </div>
            </nav>
          </div>
        </aside>

        <!-- Contenido Principal -->
        <div class="flex-1">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
            <div class="mb-8">
              <h2 class="text-2xl font-display font-extrabold uppercase italic text-secondary mb-2">
                Detalles de Cuenta
              </h2>
              <p class="text-gray-600">Gestiona tu información personal</p>
            </div>

            <!-- Información Personal -->
            <form id="account-form" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Nombre -->
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                    Nombre <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                </div>

                <!-- Apellido -->
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                    Apellido <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                </div>

                <!-- Email -->
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                    Email <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    disabled
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-50 cursor-not-allowed"
                  />
                  <p class="text-xs text-gray-500 mt-1">El email no se puede cambiar</p>
                </div>

                <!-- Teléfono -->
                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                    Teléfono
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                </div>

                <!-- DNI/NIE -->
                <div>
                  <label for="taxId" class="block text-sm font-medium text-gray-700 mb-2">
                    DNI/NIE
                  </label>
                  <input
                    type="text"
                    id="taxId"
                    name="taxId"
                    placeholder="12345678X"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                  <p class="text-xs text-gray-500 mt-1">Necesario para emitir facturas</p>
                </div>

                <!-- Fecha de Nacimiento -->
                <div>
                  <label for="birthDate" class="block text-sm font-medium text-gray-700 mb-2">
                    Fecha de Nacimiento
                  </label>
                  <input
                    type="date"
                    id="birthDate"
                    name="birthDate"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                </div>

                <!-- Género -->
                <div>
                  <label for="gender" class="block text-sm font-medium text-gray-700 mb-2">
                    Género
                  </label>
                  <select
                    id="gender"
                    name="gender"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  >
                    <option value="">Prefiero no decirlo</option>
                    <option value="male">Hombre</option>
                    <option value="female">Mujer</option>
                    <option value="other">Otro</option>
                  </select>
                </div>
              </div>

              <!-- Marketing -->
              <div class="border-t pt-6">
                <label class="flex items-start gap-3 cursor-pointer">
                  <input
                    type="checkbox"
                    id="acceptsMarketing"
                    name="acceptsMarketing"
                    class="mt-1 w-5 h-5 text-primary border-gray-300 rounded focus:ring-2 focus:ring-primary"
                  />
                  <div>
                    <span class="text-sm font-medium text-gray-700">Recibir ofertas y promociones</span>
                    <p class="text-xs text-gray-500 mt-1">
                      Acepto recibir emails con ofertas especiales, descuentos y novedades
                    </p>
                  </div>
                </label>
              </div>

              <!-- Mensaje de éxito/error -->
              <div id="message" class="hidden rounded-lg px-4 py-3 text-sm"></div>

              <!-- Botones -->
              <div class="flex gap-4 pt-4">
                <button
                  type="submit"
                  id="save-btn"
                  class="flex-1 bg-primary hover:bg-yellow-400 text-black font-bold py-3 px-8 rounded-lg uppercase tracking-wider transition-all"
                >
                  Guardar Cambios
                </button>
                <button
                  type="button"
                  id="cancel-btn"
                  class="px-8 py-3 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition-all"
                >
                  Cancelar
                </button>
              </div>
            </form>

            <!-- Cambiar Contraseña -->
            <div class="mt-12 pt-12 border-t">
              <h3 class="text-xl font-bold text-secondary mb-6">Cambiar Contraseña</h3>

              <form id="password-form" class="space-y-6 max-w-md">
                <!-- Contraseña actual -->
                <div>
                  <label for="currentPassword" class="block text-sm font-medium text-gray-700 mb-2">
                    Contraseña Actual <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="password"
                    id="currentPassword"
                    name="currentPassword"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                </div>

                <!-- Nueva contraseña -->
                <div>
                  <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-2">
                    Nueva Contraseña <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="password"
                    id="newPassword"
                    name="newPassword"
                    required
                    minlength="6"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                  <p class="text-xs text-gray-500 mt-1">Mínimo 6 caracteres</p>
                </div>

                <!-- Confirmar contraseña -->
                <div>
                  <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-2">
                    Confirmar Contraseña <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="password"
                    id="confirmPassword"
                    name="confirmPassword"
                    required
                    minlength="6"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                </div>

                <!-- Mensaje de éxito/error -->
                <div id="password-message" class="hidden rounded-lg px-4 py-3 text-sm"></div>

                <!-- Botón -->
                <button
                  type="submit"
                  id="change-password-btn"
                  class="w-full bg-secondary hover:bg-black text-white font-bold py-3 px-8 rounded-lg uppercase tracking-wider transition-all"
                >
                  Cambiar Contraseña
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  import { getCurrentCustomer, setCurrentCustomer, logout } from '@/lib/auth';
  import { toastSuccess, toastError, toastInfo } from '@/lib/toast';
  import { getCustomerFullName } from '@/lib/auth';

  const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3001/api';

  // Verificar autenticación
  function checkAuth() {
    const customer = getCurrentCustomer();
    if (!customer) {
      window.location.href = '/login';
      return false;
    }
    return true;
  }

  // Cargar datos del usuario en el sidebar
  function loadUserData() {
    const customer = getCurrentCustomer();
    if (!customer) return;

    const userName = document.getElementById('user-name');
    const userStatus = document.getElementById('user-status');

    if (userName) userName.textContent = getCustomerFullName(customer);
    if (userStatus) {
      const memberSince = new Date(customer.createdAt).getFullYear();
      userStatus.textContent = customer.isVip
        ? `Cliente VIP desde ${memberSince}`
        : `Cliente desde ${memberSince}`;
    }
  }

  // Cargar datos en el formulario
  function loadFormData() {
    const customer = getCurrentCustomer();
    if (!customer) return;

    (document.getElementById('firstName') as HTMLInputElement).value = customer.firstName;
    (document.getElementById('lastName') as HTMLInputElement).value = customer.lastName;
    (document.getElementById('email') as HTMLInputElement).value = customer.email;
    (document.getElementById('phone') as HTMLInputElement).value = customer.phone || '';
    (document.getElementById('taxId') as HTMLInputElement).value = (customer as any).taxId || '';
    (document.getElementById('gender') as HTMLSelectElement).value = (customer as any).gender || '';

    // Formato de fecha para input type="date": YYYY-MM-DD
    if ((customer as any).birthDate) {
      const date = new Date((customer as any).birthDate);
      const yyyy = date.getFullYear();
      const mm = String(date.getMonth() + 1).padStart(2, '0');
      const dd = String(date.getDate()).padStart(2, '0');
      (document.getElementById('birthDate') as HTMLInputElement).value = `${yyyy}-${mm}-${dd}`;
    }

    (document.getElementById('acceptsMarketing') as HTMLInputElement).checked = customer.acceptsMarketing;
  }

  // Al cargar la página
  document.addEventListener('DOMContentLoaded', () => {
    if (!checkAuth()) return;

    loadUserData();
    loadFormData();

    // Manejar envío del formulario de datos personales
    const accountForm = document.getElementById('account-form') as HTMLFormElement;
    const saveBtn = document.getElementById('save-btn') as HTMLButtonElement;
    const message = document.getElementById('message') as HTMLDivElement;

    accountForm?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const customer = getCurrentCustomer();
      if (!customer) return;

      const formData = new FormData(accountForm);

      saveBtn.disabled = true;
      saveBtn.textContent = 'Guardando...';
      message.classList.add('hidden');

      try {
        const response = await fetch(`${API_URL}/customers/${customer.id}`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            firstName: formData.get('firstName'),
            lastName: formData.get('lastName'),
            phone: formData.get('phone') || null,
            gender: formData.get('gender') || null,
            taxId: formData.get('taxId') || null,
            birthDate: formData.get('birthDate') || null,
            acceptsMarketing: formData.get('acceptsMarketing') === 'on',
          }),
        });

        const result = await response.json();

        if (response.ok) {
          setCurrentCustomer(result);
          loadUserData();
          message.textContent = 'Cambios guardados correctamente';
          message.className = 'bg-green-50 border border-green-200 text-green-700 rounded-lg px-4 py-3 text-sm';
          toastSuccess('Cambios guardados');
        } else {
          message.textContent = result.error || 'Error al guardar cambios';
          message.className = 'bg-red-50 border border-red-200 text-red-700 rounded-lg px-4 py-3 text-sm';
          toastError(result.error || 'Error al guardar');
        }
      } catch (error) {
        console.error('Update error:', error);
        message.textContent = 'Error de conexión. Por favor intenta de nuevo.';
        message.className = 'bg-red-50 border border-red-200 text-red-700 rounded-lg px-4 py-3 text-sm';
        toastError('Error de conexión');
      } finally {
        saveBtn.disabled = false;
        saveBtn.textContent = 'Guardar Cambios';
      }
    });

    // Botón cancelar
    const cancelBtn = document.getElementById('cancel-btn');
    cancelBtn?.addEventListener('click', () => {
      loadFormData();
      message.classList.add('hidden');
    });

    // Manejar cambio de contraseña
    const passwordForm = document.getElementById('password-form') as HTMLFormElement;
    const changePasswordBtn = document.getElementById('change-password-btn') as HTMLButtonElement;
    const passwordMessage = document.getElementById('password-message') as HTMLDivElement;

    passwordForm?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const customer = getCurrentCustomer();
      if (!customer) return;

      const formData = new FormData(passwordForm);
      const newPassword = formData.get('newPassword') as string;
      const confirmPassword = formData.get('confirmPassword') as string;

      // Validar que las contraseñas coincidan
      if (newPassword !== confirmPassword) {
        passwordMessage.textContent = 'Las contraseñas no coinciden';
        passwordMessage.className = 'bg-red-50 border border-red-200 text-red-700 rounded-lg px-4 py-3 text-sm';
        return;
      }

      changePasswordBtn.disabled = true;
      changePasswordBtn.textContent = 'Cambiando...';
      passwordMessage.classList.add('hidden');

      try {
        const response = await fetch(`${API_URL}/customers/auth/change-password`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            email: customer.email,
            currentPassword: formData.get('currentPassword'),
            newPassword: newPassword,
          }),
        });

        const result = await response.json();

        if (response.ok) {
          passwordForm.reset();
          passwordMessage.textContent = 'Contraseña cambiada correctamente';
          passwordMessage.className = 'bg-green-50 border border-green-200 text-green-700 rounded-lg px-4 py-3 text-sm';
          toastSuccess('Contraseña actualizada');
        } else {
          passwordMessage.textContent = result.error || 'Error al cambiar contraseña';
          passwordMessage.className = 'bg-red-50 border border-red-200 text-red-700 rounded-lg px-4 py-3 text-sm';
          toastError(result.error || 'Error al cambiar contraseña');
        }
      } catch (error) {
        console.error('Password change error:', error);
        passwordMessage.textContent = 'Error de conexión. Por favor intenta de nuevo.';
        passwordMessage.className = 'bg-red-50 border border-red-200 text-red-700 rounded-lg px-4 py-3 text-sm';
        toastError('Error de conexión');
      } finally {
        changePasswordBtn.disabled = false;
        changePasswordBtn.textContent = 'Cambiar Contraseña';
      }
    });

    // Logout
    const logoutBtn = document.getElementById('logout-btn');
    logoutBtn?.addEventListener('click', () => {
      logout();
      toastInfo('Sesión cerrada correctamente');
      setTimeout(() => {
        window.location.href = '/';
      }, 500);
    });
  });
</script>
