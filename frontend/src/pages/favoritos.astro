---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

const menuItems = [
  { icon: 'dashboard', label: 'Panel de Control', href: '/cuenta', active: false },
  { icon: 'shopping_bag', label: 'Mis Pedidos', href: '/cuenta/pedidos', active: false },
  { icon: 'account_circle', label: 'Detalles de Cuenta', href: '/cuenta/detalles', active: false },
  { icon: 'location_on', label: 'Direcciones', href: '/cuenta/direcciones', active: false },
  { icon: 'favorite', label: 'Lista de Deseos', href: '/favoritos', active: true }
];
---

<Layout title="Mis Favoritos - Deportes y Juguetes Eva" description="Lista de productos favoritos">
  <Header />

  <main class="bg-background-light min-h-screen">
    <!-- Breadcrumb -->
    <div class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center text-sm">
          <a href="/" class="text-gray-500 hover:text-secondary transition-colors">Inicio</a>
          <i class="material-icons text-gray-400 text-sm mx-2">chevron_right</i>
          <a href="/cuenta" class="text-gray-500 hover:text-secondary transition-colors">Mi Cuenta</a>
          <i class="material-icons text-gray-400 text-sm mx-2">chevron_right</i>
          <span class="text-secondary font-medium">Lista de Deseos</span>
        </nav>
      </div>
    </div>

    <div class="container mx-auto px-4 py-8 lg:py-12">
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Sidebar de Navegación -->
        <aside class="w-full lg:w-72 shrink-0">
          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 sticky top-24">
            <div class="mb-8">
              <h1 id="user-name" class="text-xl font-bold text-secondary">Mi Cuenta</h1>
              <span id="user-status" class="inline-block bg-primary text-black text-xs font-bold px-3 py-1 rounded-full mt-2">Cliente</span>
            </div>

            <nav class="flex flex-col gap-1">
              {menuItems.map((item) => (
                <a
                  class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-all ${
                    item.active
                      ? 'bg-primary text-black font-bold'
                      : 'hover:bg-gray-50 text-gray-700'
                  }`}
                  href={item.href}
                >
                  <i class="material-icons text-xl">{item.icon}</i>
                  <span>{item.label}</span>
                </a>
              ))}

              <!-- Botón logout -->
              <div class="mt-8 pt-6 border-t border-gray-200">
                <button id="logout-btn" class="w-full flex items-center justify-center gap-2 bg-secondary text-white py-3 rounded-lg font-bold hover:bg-black transition-all">
                  <i class="material-icons text-sm">logout</i>
                  Cerrar Sesión
                </button>
              </div>
            </nav>
          </div>
        </aside>

        <!-- Contenido Principal -->
        <div class="flex-1">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
            <div class="mb-8">
              <h2 class="text-2xl font-display font-extrabold uppercase italic text-secondary mb-2">
                Lista de Deseos
              </h2>
              <p class="text-gray-600">Tus productos favoritos guardados</p>
            </div>

            <!-- Lista vacía -->
            <div id="empty-wishlist" class="hidden text-center py-12">
              <i class="material-icons text-gray-300 text-7xl mb-4">favorite_border</i>
              <h3 class="text-xl font-bold text-gray-700 mb-2">Tu lista está vacía</h3>
              <p class="text-gray-600 mb-6">Añade productos para encontrarlos fácilmente</p>
              <a href="/ofertas" class="inline-flex items-center gap-2 bg-primary hover:bg-yellow-400 text-black font-bold py-3 px-8 rounded-lg transition-all">
                <i class="material-icons">shopping_cart</i>
                Explorar Productos
              </a>
            </div>

            <!-- Lista de productos -->
            <div id="wishlist-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <!-- Los productos se cargarán aquí con JavaScript -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  import { getWishlist, removeFromWishlist } from '@/lib/wishlist';
  import { addToCart } from '@/lib/cart';
  import { toastSuccess, toastInfo } from '@/lib/toast';
  import { getCurrentCustomer, getCustomerFullName, logout } from '@/lib/auth';

  const wishlistGrid = document.getElementById('wishlist-grid');
  const emptyWishlist = document.getElementById('empty-wishlist');

  // Verificar autenticación
  function checkAuth() {
    const customer = getCurrentCustomer();
    if (!customer) {
      window.location.href = '/login';
      return false;
    }
    return true;
  }

  // Cargar datos del usuario en el sidebar
  function loadUserData() {
    const customer = getCurrentCustomer();
    if (!customer) return;

    const userName = document.getElementById('user-name');
    const userStatus = document.getElementById('user-status');

    if (userName) userName.textContent = getCustomerFullName(customer);
    if (userStatus) {
      const memberSince = new Date(customer.createdAt).getFullYear();
      userStatus.textContent = customer.isVip
        ? `Cliente VIP desde ${memberSince}`
        : `Cliente desde ${memberSince}`;
    }
  }

  function renderWishlist() {
    const wishlist = getWishlist();

    if (wishlist.length === 0) {
      wishlistGrid!.classList.add('hidden');
      emptyWishlist!.classList.remove('hidden');
      return;
    }

    wishlistGrid!.classList.remove('hidden');
    emptyWishlist!.classList.add('hidden');

    wishlistGrid!.innerHTML = wishlist.map(item => {
      return `
        <div class="bg-white rounded-xl border border-gray-200 overflow-hidden group hover:shadow-lg transition-all" data-product-id="${item.productId}">
          <!-- Imagen -->
          <div class="relative aspect-square bg-gray-50 overflow-hidden">
            <a href="/producto/${item.productSlug}">
              <img
                src="${item.productImage || '/placeholder.jpg'}"
                alt="${item.productName}"
                class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
                loading="lazy"
              />
            </a>
            <!-- Botón eliminar -->
            <button
              class="remove-btn absolute top-2 right-2 bg-white hover:bg-red-500 text-gray-600 hover:text-white rounded-full p-1.5 shadow-md transition-all z-10"
              data-product-id="${item.productId}"
              aria-label="Eliminar de favoritos"
            >
              <i class="material-icons text-sm">favorite</i>
            </button>
          </div>

          <!-- Info del producto -->
          <div class="p-4">
            <!-- Nombre -->
            <a href="/producto/${item.productSlug}">
              <h3 class="font-bold text-secondary text-sm leading-tight mb-2 line-clamp-2 hover:text-primary transition-colors">
                ${item.productName}
              </h3>
            </a>

            <!-- Precio -->
            <div class="text-lg font-bold text-primary mb-3">
              ${parseFloat(item.productPrice.toString()).toFixed(2)}€
            </div>

            <!-- Botón añadir al carrito -->
            <button
              class="add-to-cart-btn w-full bg-secondary text-white hover:bg-primary hover:text-black py-2 rounded-lg transition font-bold text-xs uppercase flex items-center justify-center gap-1"
              data-product-id="${item.productId}"
              data-product-name="${item.productName}"
              data-product-slug="${item.productSlug}"
              data-product-price="${item.productPrice}"
              data-product-image="${item.productImage}"
            >
              <i class="material-icons text-base">shopping_cart</i>
              Añadir al Carrito
            </button>
          </div>
        </div>
      `;
    }).join('');

    // Añadir event listeners
    attachEventListeners();
  }

  function attachEventListeners() {
    // Botones de eliminar
    document.querySelectorAll('.remove-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const productId = (btn as HTMLElement).dataset.productId || '';
        removeFromWishlist(productId);
        renderWishlist();
        toastSuccess('Eliminado de favoritos');
      });
    });

    // Botones de añadir al carrito
    document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const button = btn as HTMLElement;
        const productId = button.dataset.productId || '';
        const productName = button.dataset.productName || '';
        const productSlug = button.dataset.productSlug || '';
        const productPrice = parseFloat(button.dataset.productPrice || '0');
        const productImage = button.dataset.productImage || '';

        // Añadir al carrito
        addToCart({
          productId,
          productName,
          productSlug,
          productImage,
          quantity: 1,
          unitPrice: productPrice,
        });

        // Feedback visual
        const originalContent = button.innerHTML;
        button.innerHTML = '<i class="material-icons text-base">check</i> ¡Añadido!';
        button.classList.add('bg-green-600');

        setTimeout(() => {
          button.innerHTML = originalContent;
          button.classList.remove('bg-green-600');
        }, 1500);

        toastSuccess('Añadido al carrito');
      });
    });
  }

  // Al cargar la página
  document.addEventListener('DOMContentLoaded', () => {
    if (!checkAuth()) return;

    loadUserData();
    renderWishlist();

    // Logout
    const logoutBtn = document.getElementById('logout-btn');
    logoutBtn?.addEventListener('click', () => {
      logout();
      toastInfo('Sesión cerrada correctamente');
      setTimeout(() => {
        window.location.href = '/';
      }, 500);
    });
  });

  // Escuchar cambios en la wishlist
  window.addEventListener('wishlist-updated', () => {
    renderWishlist();
  });
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
