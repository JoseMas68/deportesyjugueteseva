---
// VERSIÓN REDISEÑADA - Basada en HTML de muestra
// Navegación horizontal simple + Top bar con info de contacto

// Cargar categorías desde el backend
const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3000/api';

interface Category {
  id: string;
  name: string;
  slug: string;
  children?: Category[];
}

interface GroupedCategories {
  deportes?: Category[];
  juguetes?: Category[];
  hobbies?: Category[];
}

let deportes: Category[] = [];
let juguetes: Category[] = [];
let hobbies: Category[] = [];

try {
  const response = await fetch(`${API_URL}/categories`);
  if (response.ok) {
    const data = await response.json();
    const grouped: GroupedCategories = data.grouped || {};

    // Extraer subcategorías de cada sección
    deportes = grouped.deportes?.flatMap(cat => cat.children || []) || [];
    juguetes = grouped.juguetes?.flatMap(cat => cat.children || []) || [];
    hobbies = grouped.hobbies?.flatMap(cat => cat.children || []) || [];
  }
} catch (error) {
  console.error('Error loading categories:', error);
}
---

<header>
  <!-- Top Bar -->
  <div class="bg-secondary text-white text-xs py-2">
    <div class="container mx-auto px-4 flex items-center justify-between">
      <div class="flex items-center gap-6">
