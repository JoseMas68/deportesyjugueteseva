          <!-- Juguetes con Megamenu -->
          {juguetes.length > 0 && (
            <li class="group relative">
              <button class="block px-6 py-4 font-bold text-secondary hover:-translate-y-0.5 transition-transform flex items-center gap-1">
                Juguetes
                <i class="material-icons text-sm">expand_more</i>
              </button>

              <div class="absolute left-0 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="bg-white rounded-lg shadow-xl border border-gray-200 p-6 w-64">
                  <div class="grid gap-1">
                    {juguetes.map((cat) => (
                      <a href={`/${cat.slug}`} class="block px-4 py-2 rounded-lg hover:bg-primary transition-colors">
                        <span class="font-medium text-secondary">{cat.name}</span>
                      </a>
                    ))}
                    <div class="border-t border-gray-200 mt-2 pt-2">
                      <a href="/juguetes" class="flex items-center justify-center gap-2 px-4 py-2 bg-secondary text-primary rounded-lg font-bold hover:bg-black transition-colors">
                        Ver Todos
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          )}

          <!-- Hobbies con Megamenu -->
          {hobbies.length > 0 && (
            <li class="group relative">
              <button class="block px-6 py-4 font-bold text-secondary hover:-translate-y-0.5 transition-transform flex items-center gap-1">
                Hobbies y Coleccionismo
                <i class="material-icons text-sm">expand_more</i>
              </button>

              <div class="absolute left-0 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="bg-white rounded-lg shadow-xl border border-gray-200 p-6 w-64">
                  <div class="grid gap-1">
                    {hobbies.map((cat) => (
                      <a href={`/${cat.slug}`} class="block px-4 py-2 rounded-lg hover:bg-primary transition-colors">
                        <span class="font-medium text-secondary">{cat.name}</span>
                      </a>
                    ))}
                    <div class="border-t border-gray-200 mt-2 pt-2">
                      <a href="/hobbies" class="flex items-center justify-center gap-2 px-4 py-2 bg-secondary text-primary rounded-lg font-bold hover:bg-black transition-colors">
                        Ver Todos
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          )}

          <!-- Ofertas (sin megamenu) -->
          <li>
            <a href="/ofertas" class="block px-6 py-4 font-bold text-accent hover:scale-110 transition-transform flex items-center gap-2">
              <i class="material-icons">local_offer</i>
              Ofertas
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden bg-white border-t border-gray-200 shadow-lg">
    <div class="container mx-auto px-4 py-4">
      <ul class="space-y-2">
        {deportes.length > 0 && (
          <li>
            <a href="/deportes" class="block py-3 px-4 hover:bg-gray-100 rounded font-bold text-secondary">
              Deportes
            </a>
            <ul class="pl-6 space-y-1">
              {deportes.map((cat) => (
                <li>
                  <a href={`/${cat.slug}`} class="block py-2 px-4 hover:bg-gray-100 rounded text-sm text-gray-600">
                    {cat.name}
                  </a>
                </li>
              ))}
            </ul>
          </li>
        )}
        {juguetes.length > 0 && (
          <li>
            <a href="/juguetes" class="block py-3 px-4 hover:bg-gray-100 rounded font-bold text-secondary">
              Juguetes
            </a>
            <ul class="pl-6 space-y-1">
              {juguetes.map((cat) => (
                <li>
                  <a href={`/${cat.slug}`} class="block py-2 px-4 hover:bg-gray-100 rounded text-sm text-gray-600">
                    {cat.name}
                  </a>
                </li>
              ))}
            </ul>
          </li>
        )}
        {hobbies.length > 0 && (
          <li>
            <a href="/hobbies" class="block py-3 px-4 hover:bg-gray-100 rounded font-bold text-secondary">
              Hobbies y Coleccionismo
            </a>
            <ul class="pl-6 space-y-1">
              {hobbies.map((cat) => (
                <li>
                  <a href={`/${cat.slug}`} class="block py-2 px-4 hover:bg-gray-100 rounded text-sm text-gray-600">
                    {cat.name}
                  </a>
                </li>
              ))}
            </ul>
          </li>
        )}
        <li>
          <a href="/ofertas" class="block py-3 px-4 hover:bg-gray-100 rounded font-bold text-accent flex items-center gap-2">
            <i class="material-icons">local_offer</i>
            Ofertas
          </a>
        </li>
      </ul>

      <!-- Separador -->
      <div class="border-t border-gray-200 my-4"></div>

      <!-- Enlaces de usuario móvil -->
      <div class="space-y-2">
        <!-- Favoritos -->
        <a href="/favoritos" class="flex items-center gap-3 py-3 px-4 hover:bg-gray-100 rounded text-secondary">
          <i class="material-icons">favorite_border</i>
          <span class="font-medium">Favoritos</span>
          <span id="mobile-wishlist-count" class="ml-auto bg-red-500 text-white text-xs font-bold rounded-full w-5 h-5 flex items-center justify-center" style="display: none;">0</span>
        </a>

        <!-- Login (si no está autenticado) -->
        <a href="/login" id="mobile-login-link" class="flex items-center gap-3 py-3 px-4 hover:bg-gray-100 rounded text-secondary">
          <i class="material-icons">login</i>
          <span class="font-medium">Iniciar sesión</span>
        </a>

        <!-- Crear cuenta (si no está autenticado) -->
        <a href="/registro" id="mobile-register-link" class="flex items-center gap-3 py-3 px-4 bg-primary hover:bg-yellow-400 rounded text-secondary">
          <i class="material-icons">person_add</i>
          <span class="font-bold">Crear cuenta</span>
        </a>

        <!-- Mi cuenta (si está autenticado, oculto por defecto) -->
        <a href="/cuenta" id="mobile-account-link" class="hidden items-center gap-3 py-3 px-4 hover:bg-gray-100 rounded text-secondary">
          <i class="material-icons">account_circle</i>
          <span class="font-medium" id="mobile-user-name">Mi Cuenta</span>
        </a>

        <!-- Cerrar sesión (si está autenticado, oculto por defecto) -->
        <button id="mobile-logout-btn" class="hidden w-full items-center gap-3 py-3 px-4 hover:bg-gray-100 rounded text-red-600">
          <i class="material-icons">logout</i>
          <span class="font-medium">Cerrar sesión</span>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  import { getCartCount } from '@/lib/cart';
  import { getWishlistCount } from '@/lib/wishlist';
  import { getCurrentCustomer, logout } from '@/lib/auth';

  // Toggle mobile menu
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Actualizar UI según estado de autenticación (desktop y móvil)
  async function updateUserMenu() {
    const customer = await getCurrentCustomer();

    // Desktop elements
    const loginLink = document.getElementById('login-link');
    const accountLink = document.getElementById('account-link');
    const userName = document.getElementById('user-name');

    // Mobile elements
    const mobileLoginLink = document.getElementById('mobile-login-link');
    const mobileRegisterLink = document.getElementById('mobile-register-link');
    const mobileAccountLink = document.getElementById('mobile-account-link');
    const mobileLogoutBtn = document.getElementById('mobile-logout-btn');
    const mobileUserName = document.getElementById('mobile-user-name');

    if (customer) {
      // Usuario autenticado - Desktop
      if (loginLink && accountLink) {
        loginLink.classList.add('hidden');
        accountLink.classList.remove('hidden');
        accountLink.classList.add('flex');
        if (userName) {
          userName.textContent = customer.firstName || 'Mi Cuenta';
        }
      }

      // Usuario autenticado - Móvil
      if (mobileLoginLink) mobileLoginLink.classList.add('hidden');
      if (mobileRegisterLink) mobileRegisterLink.classList.add('hidden');
      if (mobileAccountLink) {
        mobileAccountLink.classList.remove('hidden');
        mobileAccountLink.classList.add('flex');
      }
      if (mobileLogoutBtn) {
        mobileLogoutBtn.classList.remove('hidden');
        mobileLogoutBtn.classList.add('flex');
      }
      if (mobileUserName) {
        mobileUserName.textContent = customer.firstName || 'Mi Cuenta';
      }
    } else {
      // Usuario no autenticado - Desktop
      if (loginLink && accountLink) {
        loginLink.classList.remove('hidden');
        accountLink.classList.add('hidden');
      }

      // Usuario no autenticado - Móvil
      if (mobileLoginLink) mobileLoginLink.classList.remove('hidden');
      if (mobileRegisterLink) mobileRegisterLink.classList.remove('hidden');
      if (mobileAccountLink) mobileAccountLink.classList.add('hidden');
      if (mobileLogoutBtn) mobileLogoutBtn.classList.add('hidden');
    }
  }

  // Actualizar contador del carrito
  function updateCartCounter() {
    const cartCountElement = document.getElementById('cart-count');
    if (!cartCountElement) return;

    const count = getCartCount();

    if (count > 0) {
      cartCountElement.textContent = count.toString();
      cartCountElement.style.display = 'flex';
    } else {
      cartCountElement.style.display = 'none';
    }
  }

  // Actualizar contador de favoritos (desktop y móvil)
  function updateWishlistCounter() {
    const wishlistCountElement = document.getElementById('wishlist-count');
    const mobileWishlistCount = document.getElementById('mobile-wishlist-count');

    const count = getWishlistCount();

    // Desktop
    if (wishlistCountElement) {
      if (count > 0) {
        wishlistCountElement.textContent = count.toString();
        wishlistCountElement.style.display = 'flex';
      } else {
        wishlistCountElement.style.display = 'none';
      }
    }

    // Mobile
    if (mobileWishlistCount) {
      if (count > 0) {
        mobileWishlistCount.textContent = count.toString();
        mobileWishlistCount.style.display = 'flex';
      } else {
        mobileWishlistCount.style.display = 'none';
      }
    }
  }

  // Logout desde móvil
  function setupMobileLogout() {
    const mobileLogoutBtn = document.getElementById('mobile-logout-btn');
    mobileLogoutBtn?.addEventListener('click', async () => {
      await logout();
      window.location.href = '/';
    });
  }

  // Inicializar contadores al cargar la página
  document.addEventListener('DOMContentLoaded', () => {
    updateCartCounter();
    updateWishlistCounter();
    updateUserMenu();
    setupMobileLogout();
  });

  // Escuchar cambios en el carrito
  window.addEventListener('cart-updated', () => {
    updateCartCounter();
  });

  // Escuchar cambios en la wishlist
  window.addEventListener('wishlist-updated', () => {
    updateWishlistCounter();
  });

  // Escuchar cambios en autenticación
  window.addEventListener('customer-updated', () => {
    updateUserMenu();
  });

  window.addEventListener('customer-logout', () => {
    updateUserMenu();
  });
</script>
