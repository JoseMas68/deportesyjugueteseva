---
import { getProducts, getCategories, type Product, type Category } from '@/lib/api';

interface BentoGridConfig {
  title?: string;
  source: 'categories' | 'products';
  categoryIds?: string[];
  categoryId?: string;
  productIds?: string[];
  layout: '2x2' | '3x3' | '1-2-1' | '2-1-2' | 'masonry';
  showTitles: boolean;
  showPrices: boolean;
}

interface Props {
  config: BentoGridConfig;
}

const { config } = Astro.props;

interface BentoItem {
  id: string;
  name: string;
  image: string;
  url: string;
  price?: number;
  compareAtPrice?: number;
}

let items: BentoItem[] = [];

const getLimit = (layout: string) => {
  switch (layout) {
    case '3x3': return 9;
    case '2x2': return 4;
    case 'masonry': return 6;
    case '1-2-1': return 4;
    case '2-1-2': return 5;
    default: return 6;
  }
};

try {
  if (config.source === 'categories') {
    const categoriesData = await getCategories();
    const allCategories = categoriesData.categories || [];

    if (config.categoryIds && config.categoryIds.length > 0) {
      items = config.categoryIds
        .map(id => allCategories.find(c => c.id === id))
        .filter((c): c is Category => c !== undefined)
        .map(cat => ({
          id: cat.id,
          name: cat.name,
          image: cat.imageUrl || '/placeholder.jpg',
          url: `/${cat.slug}`,
        }));
    } else {
      const featuredCats = allCategories.filter(c => c.isFeatured);
      const catsToUse = featuredCats.length > 0 ? featuredCats : allCategories;
      items = catsToUse
        .slice(0, getLimit(config.layout))
        .map(cat => ({
          id: cat.id,
          name: cat.name,
          image: cat.imageUrl || '/placeholder.jpg',
          url: `/${cat.slug}`,
        }));
    }
  } else {
    const limit = getLimit(config.layout);
    const filters: Record<string, unknown> = { limit };

    if (config.categoryId) {
      filters.category = config.categoryId;
    } else {
      filters.featured = true;
    }

    const result = await getProducts(filters);

    let products = result.products;
    if (products.length === 0 && filters.featured) {
      const anyProducts = await getProducts({ limit });
      products = anyProducts.products;
    }

    items = products.map(p => ({
      id: p.id,
      name: p.name,
      image: p.thumbnailUrl || (p.images && p.images[0]) || '/placeholder.jpg',
      url: `/producto/${p.slug}`,
      price: typeof p.price === 'string' ? parseFloat(p.price) : p.price,
      compareAtPrice: p.compareAtPrice ? (typeof p.compareAtPrice === 'string' ? parseFloat(p.compareAtPrice) : p.compareAtPrice) : undefined,
    }));
  }
} catch (error) {
  console.error('Error loading bento grid items:', error);
}

// Layouts CSS Grid - columnas correctas
const layoutClasses: Record<string, string> = {
  '2x2': 'grid-cols-2',
  '3x3': 'grid-cols-3',
  '1-2-1': 'grid-cols-2',
  '2-1-2': 'grid-cols-2',
  'masonry': 'grid-cols-2 md:grid-cols-4',
};

// Altura de filas - doble de antes
const rowHeightClasses: Record<string, string> = {
  '2x2': 'auto-rows-[180px] sm:auto-rows-[220px]',
  '3x3': 'auto-rows-[150px] sm:auto-rows-[180px]',
  '1-2-1': 'auto-rows-[160px] sm:auto-rows-[200px]',
  '2-1-2': 'auto-rows-[160px] sm:auto-rows-[200px]',
  'masonry': 'auto-rows-[200px] sm:auto-rows-[240px]',
};

const getItemClasses = (index: number, layout: string) => {
  if (layout === '1-2-1') {
    if (index === 0) return 'col-span-2';
    if (index === 3) return 'col-span-2';
  }
  if (layout === '2-1-2') {
    if (index === 2) return 'col-span-2';
  }
  if (layout === 'masonry') {
    if (index === 0) return 'col-span-2 row-span-2';
    if (index === 3) return 'col-span-2';
  }
  return '';
};
---

{items.length > 0 ? (
  <section class="py-6 bg-background-light">
    <div class="container mx-auto px-4">
      {config.title && (
        <div class="mb-6">
          <h2 class="text-3xl font-display font-bold text-secondary">{config.title}</h2>
          <div class="h-1 w-16 bg-primary mt-2"></div>
        </div>
      )}

      <div class={`grid gap-2 ${layoutClasses[config.layout]} ${rowHeightClasses[config.layout]}`}>
        {items.map((item, index) => (
          <a
            href={item.url}
            class={`group relative overflow-hidden rounded-lg bg-gray-200 ${getItemClasses(index, config.layout)}`}
          >
            <img
              src={item.image}
              alt={item.name}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />

            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>

            <div class="absolute bottom-0 left-0 right-0 p-2 sm:p-3">
              {config.showTitles && (
                <h3 class="text-white font-semibold text-xs sm:text-sm leading-tight group-hover:text-primary transition-colors line-clamp-2">
                  {item.name}
                </h3>
              )}

              {config.showPrices && item.price !== undefined && (
                <div class="mt-1 flex items-center gap-1.5">
                  {item.compareAtPrice && item.compareAtPrice > item.price && (
                    <span class="text-gray-400 line-through text-[10px] sm:text-xs">{item.compareAtPrice.toFixed(2)}€</span>
                  )}
                  <span class="text-white font-bold text-xs sm:text-sm">{item.price.toFixed(2)}€</span>
                </div>
              )}
            </div>

            <div class="absolute top-2 right-2 w-6 h-6 sm:w-7 sm:h-7 bg-white/90 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all">
              <svg class="w-3 h-3 sm:w-3.5 sm:h-3.5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
) : (
  <section class="py-6 bg-background-light">
    <div class="container mx-auto px-4 text-center py-8">
      <p class="text-gray-400 text-sm">Cargando contenido...</p>
    </div>
  </section>
)}
